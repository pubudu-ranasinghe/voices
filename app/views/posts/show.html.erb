<p id="notice"><%= notice %></p>

<div class="post">

  <div class="container">

    <div class="row post-header">
      <div class="col-md-8 col-md-offset-2 text-center">
        <h1 class="post-title"><%= @post.title %></h1>
        <div class="post-header-meta">
          <em>by</em>
          <%= image_tag('profile-img.jpg', class: 'img-circle img-profile-s') %>
          <span>Anonymous User <em>on</em> 21st Nov 2015</span>
        </div>
      </div>
    </div>
    <div class="row post-body">
      <div class="col-md-8">
        <%= image_tag @post.cover.url(:hero), class: 'img-responsive' %>
        <h4 class="section-head">Tagged Ministers</h4>
        <div class="post-mps">
          <% @post.ministers.each do |m| %>
            <div class="profile-card">
              <a href="#" class="profile-pic">
                <%= image_tag m.profile.url(:thumb), class: 'img-circle img-profile-m' %>
              </a>
              <div class="profile-text">
                <%= m.name %><br><span><%= m.title %></span>
              </div>
            </div>
          <% end %>
        </div>
        <div class="post-text">
          <%= @post.content.html_safe %>
        </div>

        <div class="comments">
          <div id="disqus_thread"></div>
<script>
/**
