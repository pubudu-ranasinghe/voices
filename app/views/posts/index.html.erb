<p id="notice"><%= notice %></p>

<div class="container-fluid">

  <div class="row text-center hero-banner">
    <div class="col-md-12">
      <div>
         <%= image_tag('par.jpg', class: 'img-responsive center-block') %>
      </div>
      <h1>Digitizing democracy, one cause at a time</h1>
    </div>
    <div class="col-md-12">
      <%= link_to 'Start a Cause', new_post_path, class: 'btn btn-primary btn-lg btn-red' %>
    </div>
  </div>

</div>

<div class="container">

<div class="row">
  <div class="col-md-12 text-center section-title">
    <h4>Trending Causes</h4>
  </div>
</div>

  <% @posts.in_groups_of(3, false).each do |group| %>
    <div class = "row">
      <% group.each do |post| %>
        <div class="col-sm-6 col-md-4">
          <div class="panel panel-default">
            <div class="panel-thumbnail">
              <%= image_tag post.cover.url(:thumb) %>
            </div>
            <div class="panel-body">
              <h4 class="lead"><%= link_to post.title, post %></h4>
              <div class = "row">
                <div class="col-md-12">
                  <div class="votesize">
                    <span class = "agdisag">
                      <%= (post.get_upvotes.size + 4) * 124 %>
                    </span>
                      <%= (post.get_downvotes.size + 4) * 124 %>
                  </div>
                </div>
              </div>
             <div class = "row">
               <div class = "col-md-12">
                 <%= link_to "AGREE", like_post_path(post), method: :put, class: 'agreebtn' %>
                <%= link_to "DISAGREE", dislike_post_path(post), method: :put, class: 'disagreebtn' %>
               </div>
             </div>
            </div>
          </div>
        </div><!--/col-->
      <% end %>
    </div>
  <% end %>
</div>
