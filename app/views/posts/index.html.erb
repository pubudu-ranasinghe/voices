<p id="notice"><%= notice %></p>

<div class="container-fluid">

  <div class="row text-center hero-banner">
    <div class="col-md-12">
      <div>
         <%= image_tag('par.jpg', class: 'img-responsive center-block') %>
      </div>
      <h1>Digitizing democracy, one cause at a time</h1>
    </div>
    <div class="col-md-12">
      <%= link_to 'Start a Cause', new_post_path, class: 'btn btn-primary btn-lg btn-red' %>
    </div>
  </div>

</div>

<div class="container">
  <div class="row">
    <div class="col-md-12 text-center section-title">
      <h4>Trending Causes</h4>
    </div>
  </div>

  <% @posts.in_groups_of(4, false).each do |group| %>
    <div class="row">
      <% group.each do |post| %>
        <div class="col-xs-4 col-sm-3">
          <div class="card">
            <% if post.cover.exists? %>
              <%= image_tag post.cover.url(:thumb), class: 'card-img-top card-img-full' %>
            <% end %>
            <div class="card-block">
              <!-- <a href="#" class="card-link-full"></a> -->
              <%= link_to(post) do %>
                <h3 class="card-title"><%= post.title %></h3>
              <% end %>
              <p class="card-text"><%= (post.get_upvotes.size + 4) * 124 %>-<%= (post.get_downvotes.size + 4) * 124 %></p>
              <!-- <%= button_to "AGREE", like_post_path(post), method: :put, class: 'btn btn-primary' %> -->
              <!-- <%= button_to "DISAGREE", dislike_post_path(post), method: :put, class: 'btn btn-primary' %> -->
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
